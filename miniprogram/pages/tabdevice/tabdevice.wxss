/* miniprogram/pages/tabdevice/tabdevice.wxss */
.tabdevice-box {
  border-radius: 12px;
  margin: 0 auto 20px;
  padding: 10px;
  width: 80%;
  min-height: 50px;
  background-color: #fff;
  overflow: hidden;
}

.tabdevice-deivce-name {
  width: 100%;
  height: 30px;
  line-height: 30px;
  text-align: center;
}

/* check */
.tabdevice-2 {
  display: flex;
  justify-content: space-around;
  margin: 20px 0;
}
.tabdevice-line {
  border-left: #e1e1e1 solid 1px;
}
.tabdevice-2-0 {
  width: 45%;
  padding: 0 0 0 4%;
}
.tabdevice-2-1 {
  font-size: 12px;
  line-height: 20px;
}
.tabdevice-2-2 {
  font-size: 30px;
  font-weight: 700;
  line-height: 50px;
  display: inline-block;
}
.tabdevice-2-3 {
  font-size: 11px;
  display: inline-block;
  margin: 0 0 0 10px;
}

/* progress */
.tabdevice-progress-box {
  margin: 20px 0;
}
.tabdevice-progress {
  border-radius: 50px;
  overflow: hidden;
}
.tabdevice-progress-name {
  font-size: 12px;
  margin: 5px 0 5px 0;
}

/* data */
.tabdevice-3 {
  display: flex;
  justify-content: space-around;
}
.tabdevice-3-1 {
  margin: 10px 0 0 5px;
  width: 49%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.tabdevice-3-1-box {
  
}
.tabdevice-3-2 {
  font-size: 12px;
}
.tabdevice-3-3 {
  font-size: 12px;
}
.tabdevice-3-4 {
  font-size: 16px;
}
.tabdevice-3-4-1 {
  display: inline-block;
  color: #00a4ff;
  font-weight: 700;
}