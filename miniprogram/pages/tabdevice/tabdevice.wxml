        </view>
      </view>
      <view class="tabdevice-3-4">
        <view class="tabdevice-3-4-1">400</view>
        L
      </view>
    </view>
    <view class="tabdevice-line"></view>
    <view class="tabdevice-3-1">
      <view class="tabdevice-3-1-box">
